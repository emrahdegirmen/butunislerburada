@using PagedList
@using PagedList.Mvc
@using butunislerburada.Data.Enum

@model butunislerburada.Data.Model.DataModel

@{
    ViewBag.Title = "Son İşlemler Listesi";
    ViewBag.PageName = "Son İşlemler";
    ViewBag.PageUrl = "RecentTransactionList";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewBag.FormID = "FilterRecentTransactionForm";
}


<section class="content">

    <div class="box box-info pageHeader">
        <div class="box-header with-border">
            <section class="content-header">
                <h1>@ViewBag.Title</h1>
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Ana Sayfa</a></li>
                    <li><a href="@Url.Action("List", ViewBag.PageName)"><i class="fa fa-dashboard"></i> @ViewBag.Title.Replace(" Listesi", "") İşlemleri</a></li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </section>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("Filter", "RecentTransaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="input-group input-group-sm">
                    @Html.TextBoxFor(m => m.FilterText, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-flat btnFilter" type="submit">Filtrele</button>
                    </span>
                </div>
            }
        </div>
    </div>

    <div class="alert alert-dismissable" id="ShowStatusInfo">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <span id="ShowStatusInfoText"></span>
    </div>

    <div class="box box-primary">

        <div class="box-body table-responsive no-padding">

            <table class="table table-hover" id="@ViewBag.PageName">
                <thead>
                    <tr class="bg-primary">
                        <th>Ikon</th>
                        <th>Tür</th>
                        <th>Başlık</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.RecentTransactionsPaged)
                    {
                        var IconName = "bell-o text-gray";

                        if (item.DataTypeID == 1)
                        {
                            IconName = "user text-aqua";
                        }
                        else if (item.DataTypeID == 2)
                        {
                            IconName = "headphones text-yellow";
                        }
                        else if (item.DataTypeID == 3)
                        {
                            IconName = "bookmark text-green";
                        }

                        <tr id="@ViewBag.PageUrl-@item.ID">
                            <td><i class="fa fa-@IconName"></i></td>
                            <td>@DataTypeNameValue.StatusValueName(item.DataTypeID) @Html.Raw(item.SaveTypeID == 1 ? "Eklendi" : "Düzenlendi")</td>
                            <td>@item.Name</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

        <div class="box-footer clearfix">
            @Html.PagedListPager(Model.RecentTransactionsPaged, sayfa => Url.Action("List", ViewBag.PageName, new { sayfa = sayfa, searchText = Model.FilterText, StatusID = Model.StatusID }))
        </div>

    </div>

</section>