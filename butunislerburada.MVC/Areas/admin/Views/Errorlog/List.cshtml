@using PagedList
@using PagedList.Mvc
@using butunislerburada.Data.Enum

@model butunislerburada.Data.Model.DataModel

@{
    ViewBag.Title = "Hata Listesi";
    ViewBag.PageName = "Hata";
    ViewBag.PageUrl = "ErrorlogList";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
    ViewBag.FormID = "FilterErrorlogForm";
}


<section class="content">

    <div class="box box-info pageHeader">
        <div class="box-header with-border">
            <section class="content-header">
                <h1>@ViewBag.Title</h1>
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Ana Sayfa</a></li>
                    <li><a href="@Url.Action("List", ViewBag.PageName)"><i class="fa fa-dashboard"></i> @ViewBag.Title.Replace(" Listesi", "") İşlemleri</a></li>
                    <li class="active">@ViewBag.Title</li>
                </ol>
            </section>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("Filter", "Errorlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="input-group input-group-sm">
                    @Html.TextBoxFor(m => m.FilterText, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-flat btnFilter" type="submit">Filtrele</button>
                    </span>
                </div>
            }
        </div>
    </div>

    <div class="alert alert-dismissable" id="ShowStatusInfo">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <span id="ShowStatusInfoText"></span>
    </div>

    <div class="box box-primary">

        <div class="box-body table-responsive no-padding">

            <table class="table table-hover" id="@ViewBag.PageName">
                <thead>
                    <tr class="bg-primary">
                        <th>ID</th>
                        <th>Mesaj</th>
                        <th>Hata</th>
                        <th>Sayfa</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model.ErrorLogsPaged)
                    {
                        <tr id="@ViewBag.PageUrl-@item.ID">
                            <td>@item.ID</td>
                            <td>@item.Message</td>
                            <td>@item.Error</td>
                            <td>@item.PageName</td>
                            <td>@item.CreatedDate</td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

        <div class="box-footer clearfix">
            @Html.PagedListPager(Model.ErrorLogsPaged, sayfa => Url.Action("List", ViewBag.PageName, new { sayfa = sayfa, searchText = Model.FilterText, StatusID = Model.StatusID }))
        </div>

    </div>

</section>