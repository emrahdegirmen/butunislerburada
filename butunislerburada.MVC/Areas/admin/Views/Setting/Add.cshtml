@model butunislerburada.Data.Model.DataModel

@{
    ViewBag.Title = "Genel Ayarlar";
    ViewBag.PageName = "Setting";
    ViewBag.FormID = "AddSettingForm";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Ana Sayfa</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">

    <div class="alert alert-dismissable" id="ShowStatusInfo">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <span id="ShowStatusInfoText"></span>
    </div>
    
        @using (Html.BeginForm("Add", "Setting", FormMethod.Post, new { enctype = "multipart/form-data", id = ViewBag.FormID }))
        {

            @Html.HiddenFor(m => m.Setting.ID)

            <div class="row">

                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Ayarlar</h3>
                        </div>                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="field-label">Ana Sayfa Başlık</label>
                                @Html.TextBoxFor(m => m.Setting.MainPageTitle, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Sayfa Başlık</label>
                                @Html.TextBoxFor(m => m.Setting.PageTitle, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Description</label>
                                @Html.TextAreaFor(m => m.Setting.Description, new { @class = "form-control textAreaHeight100" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Adres</label>
                                @Html.TextBoxFor(m => m.Setting.Address, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Harita Kodu</label>
                                @Html.TextAreaFor(m => m.Setting.MapCode, new { @class = "form-control textAreaHeight100" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Telefon</label>
                                @Html.TextBoxFor(m => m.Setting.Phone, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Cep Telefonu</label>
                                @Html.TextBoxFor(m => m.Setting.MobilePhone, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Mail</label>
                                @Html.TextBoxFor(m => m.Setting.Mail, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">

                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Sosyal Medya Ayarları</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="field-label">Facebook</label>
                                @Html.TextBoxFor(m => m.Setting.Facebook, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Twitter</label>
                                @Html.TextBoxFor(m => m.Setting.Twitter, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Instagram</label>
                                @Html.TextBoxFor(m => m.Setting.Instagram, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Google</label>
                                @Html.TextBoxFor(m => m.Setting.Google, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Youtube</label>
                                @Html.TextBoxFor(m => m.Setting.Youtube, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Linkedin</label>
                                @Html.TextBoxFor(m => m.Setting.Linkedin, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Pinterest</label>
                                @Html.TextBoxFor(m => m.Setting.Pinterest, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Mail Ayarları</h3>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="field-label">Mail Sunucu</label>
                                @Html.TextBoxFor(m => m.Setting.MailServer, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Mail Adresi</label>
                                @Html.TextBoxFor(m => m.Setting.MailAddress, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label class="field-label">Mail Şifre</label>
                                @Html.TextBoxFor(m => m.Setting.MailPassword, new { @class = "form-control" })
                            </div>                           
                        </div>
                    </div>
                </div>

            </div>

            <div class="box-footer">
                <a class="btn btn-default" href="@Url.Action("Index", "Home")"><i class="fa fa-undo pr5"></i> Vazgeç</a>
                <a class="btn btn-primary SendForm" data-form-id="@ViewBag.FormID" data-post-url="@Url.Action("Add", ViewBag.PageName)" data-return-url="@Url.Action("Add", ViewBag.PageName)"><i class="fa fa-floppy-o pr5"></i> Kaydet</a>
            </div>

        }

</section>

@section scripts{
}