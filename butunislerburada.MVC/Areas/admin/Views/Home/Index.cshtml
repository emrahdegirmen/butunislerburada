@using butunislerburada.Data.Enum

@model butunislerburada.Data.Model.DataModel

@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Yönetim Paneline Hoşgeldiniz.<small>Yapmak İstediğiniz İşlemleri Sol Taraftaki Menülerden Gerçekleştirebilirsiniz.</small></h1>
    <ol class="breadcrumb"><li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Ana Sayfa</a></li></ol>
</section>

<section class="content">

    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.SingerCount</h3>
                    <p>Şarkıcı</p>
                </div>
                <div class="icon"><i class="fa fa-user"></i></div>
                <a href="@Url.Action("List","Singer")" class="small-box-footer">Detaylar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.LyricsCount</h3>
                    <p>Şarkı Sözü</p>
                </div>
                <div class="icon"><i class="fa fa-headphones"></i></div>
                <a href="@Url.Action("List","Lyrics")" class="small-box-footer">Detaylar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.BlogCount</h3>
                    <p>Blog</p>
                </div>
                <div class="icon"><i class="fa fa-bookmark"></i></div>
                <a href="@Url.Action("List","Blog")" class="small-box-footer">Detaylar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.ContactCount</h3>
                    <p>Siteden Mesaj</p>
                </div>
                <div class="icon"><i class="fa fa-envelope"></i></div>
                <a href="@Url.Action("List","Contact")" class="small-box-footer">Detaylar <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Son İşlemler</h3>
        </div>
        <div class="box-body no-padding">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <tbody>

                        @if (Model.RecentTransactions != null && Model.RecentTransactions.Count > 0)
                        {
                            foreach (var item in Model.RecentTransactions)
                            {
                                var IconName = "bell-o text-gray";

                                if (item.DataTypeID == 1)
                                {
                                    IconName = "user text-aqua";
                                }
                                else if (item.DataTypeID == 2)
                                {
                                    IconName = "headphones text-yellow";
                                }
                                else if (item.DataTypeID == 3)
                                {
                                    IconName = "bookmark text-green";
                                }

                                <tr>
                                    <td class="mailbox-star"><a href="#"><i class="fa fa-@IconName text-yellow"></i></a></td>
                                    <td class="mailbox-name">@DataTypeNameValue.StatusValueName(item.DataTypeID) @Html.Raw(item.SaveTypeID == 1 ? "Eklendi" : "Düzenlendi")</td>
                                    <td class="mailbox-subject"><b>@item.Name</b></td>
                                    <td class="mailbox-date">@item.CreatedDate</td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>



