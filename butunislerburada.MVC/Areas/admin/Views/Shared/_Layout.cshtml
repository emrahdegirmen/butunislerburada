
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="/areas/admin/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/iCheck/flat/blue.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/morris/morris.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />

    <link href="/areas/admin/Content/dist/style.css" rel="stylesheet" type="text/css" />

    <link href="/areas/admin/Content/plugins/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/Content/dist/toggle/bootstrap-toggle.min.css" rel="stylesheet">

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="skin-blue sidebar-mini">

    <div class="wrapper">

        <header class="main-header">

            <a href="@Url.Action("Index","Home")" class="logo">
                <span class="logo-mini"><b>Yönetim</b>Paneli</span>
                <span class="logo-lg"><b>Yönetim</b>Paneli</span>
            </a>

            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button"><span class="sr-only">Toggle navigation</span></a>
                @Html.Action("_Header", "Partial")
            </nav>

        </header>

        <aside class="main-sidebar">
            <section class="sidebar">

                <div class="user-panel">
                    <div class="pull-left image"><i class="fa fa-user loginUserImage"></i></div>
                    <div class="pull-left info">
                        @if (Request.Cookies["UserLogin"] != null)
                        {
                            <p>@Server.UrlDecode(Request.Cookies["UserLogin"]["UserName"].ToString())</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> @Request.Cookies["UserLogin"]["LastLoginDate"].ToString()</a>
                        }
                    </div>
                </div>

                @Html.Action("_SidebarMenu", "Partial")

            </section>
        </aside>

        <div class="content-wrapper">

            @RenderBody()

        </div>

    </div>


    <div id="LoadingPanel" class="modal fade in adminModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title">Durum</h5>
                </div>
                <div class="modal-body text-center">
                    <div class="overlay"><i class="fa fa-refresh fa-spin"></i></div>
                    <p>İşleminiz yapılıyor. Lütfen bekleyiniz.</p>
                </div>
            </div>
        </div>
    </div>

    <div id="ConfirmationPanel" class="modal fade in adminModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Onay Ekranı</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <p>Silmek istediğinizden emin misiniz?</p>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-success btn-gradient" id="ConfirmationPanelYes"><i class="fa fa-check"></i> Evet</a>
                    <a class="btn btn-default btn-gradient" data-dismiss="modal"><i class="fa fa-times"></i> Hayır</a>
                </div>
            </div>
        </div>
    </div>




    <script src="/areas/admin/Content/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $.widget.bridge('uibutton', $.ui.button);
    </script>

    <script src="/areas/admin/Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    @*<script src="/areas/admin/Content/plugins/morris/morris.min.js" type="text/javascript"></script>*@
    <script src="/areas/admin/Content/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/knob/jquery.knob.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/plugins/fastclick/fastclick.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/dist/js/app.min.js" type="text/javascript"></script>
    @*<script src="/areas/admin/Content/dist/js/pages/dashboard.js" type="text/javascript"></script>*@
    <script src="/areas/admin/Content/dist/js/demo.js" type="text/javascript"></script>

    <script src="/areas/admin/Content/dist/toggle/bootstrap-toggle.min.js"></script>
    <script src="/areas/admin/Content/plugins/select2/select2.full.min.js" type="text/javascript"></script>
    <script src="/areas/admin/Content/dist/js/custom.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
